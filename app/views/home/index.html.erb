<h1>FB Ads Portal</h1>
<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="well well-sm">
                <legend class="text-center">Welcome to Ads Portal</legend>
                <div class="text-center">
                    <div id="user_nav">
                      <% if current_user %>
                        Signed in as <strong><%= current_user.name %></strong>!
                        <%= link_to "Sign out", signout_path, id: "sign_out" %>
                        <br>
                        <%= link_to "Create Ads", ads_new_url, id: "sign_out" %>
                      <% else %>
                        Please login and authenticate to continue.
                        <br><br>
                        <%= link_to "Sign in with Facebook", "/auth/facebook", id: "sign_in", class: "btn btn-primary" %>
                      <% end %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
